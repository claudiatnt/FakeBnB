<div class="row">
	<div class="col-xs-12 col-md-12">
		<h1 class="text-center">User Main Controller</h1>
	</div>
</div>

<div class="row">
	<div class="col-xs-4 col-xs-offset-4 col-md-4 col-md-offset-4">
		<h3 class="text-center">Welcome <%= current_user.role %></h3>
	</div>
</div>

<div class="row">
	<% @users.each do |user| %>
	<div class="col-xs-4 col-xs-offset-2 col-md-4 col-md-offset-2">
		<%= link_to user.email, user_path(user.id) %>
	</div>
	<div class="col-xs-4 col-md-4">
		<%if user.role == nil %>
			<% user.user! %>
		<% end %>
		<h4 class="text-center">Role: <%= user.role %></h4>
	</div>
	<% end %>
</div>