<div class="container-fluid sign-up" id="clearance">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <h1 class="text-center">Sign Up</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-md-8 col-md-offset-2 text-center">
      <%= form_for @user, remote: true do |form| %>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, type: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, type: "password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :age %>
          <%= form.date_field :age, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.radio_button :gender, "Male" %>
          <%= form.label :gender_male, "Male" %>
          <%= form.radio_button :gender, "Female" %>
          <%= form.label :gender_female, "Female" %>
        </div>
        <%= form.submit "Sign Up", class: "btn btn-primary btn-block" %>
        <%= link_to "Home", root_path, class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>