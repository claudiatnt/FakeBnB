<div class="row">
	<div class="col-xs-12 col-md-12">
		<h1 class="text-center">Edit User Profile</h1>
	</div>
</div>

<div class="row">
	<div class="col-xs-8 col-xs-offset-2 col-md-8 col-md-offset-2">
		<%= form_for @user do |form| %>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, type: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, type: "password", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :age, value: "Birthday" %>
          <%= form.date_field :age, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.radio_button :gender, "Male" %>
          <%= form.label :gender_male, "Male" %>
          <%= form.radio_button :gender, "Female" %>
          <%= form.label :gender_female, "Female" %>
        </div>
        <div class="form-group">
          <%= form.label :avatar %>
          <%= form.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= form.text_field :remote_avatar_url %>
        </div>
        <%= form.submit "Edit", class: "btn btn-primary btn-block" %>
      <% end %>
	</div>
</div>