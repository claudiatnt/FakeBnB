<h1>HMTL FOR LISTING FORM HERE</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-md-12">
      <h1 class="text-center">Add A New Listing</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-md-8 col-md-offset-2">
      <%= form_for [@user, @listing] do |form| %>
        <div class="form-group">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, rows: "6", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :rules %>
          <%= form.text_area :rules, rows: "3", class: "form-control" %>
        </div>
        <div class="row">
          <div class="col-xs-2 col-md-2">
            <div class="form-group">
              <%= form.label :bedroom, "No of Bedrooms" %>
              <%= form.number_field :bedroom, class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-2 col-md-2">
            <div class="form-group">
              <%= form.label :bathroom, "No of Bathroom" %>
              <%= form.number_field :bathroom, class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-8 col-md-8">
            <div class="form-group">
              <%= form.label :price %>
              <%= form.number_field :price, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6 col-md-6">
            <div class="form-group">
              <%= form.label :availability_start, "Availability Starts" %>
              <%= form.date_field :availability_start, class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-6 col-md-6">
            <%= form.label :availability_end, "Availability Ends" %>
            <%= form.date_field :availability_end, class: "form-control" %>
          </div>
        </div>
        <%= form.fields_for :locations do |location| %>
          <div class="form-group">
            <%= location.label :address %>
            <%= location.text_field :address , class: "form-control" %>
          </div>
          <div class="form-group row">
            <div class="col-xs-4 col-md-4">
              <%= location.label :city %>
              <%= location.text_field :city, class: "form-control" %>
            </div>
            <div class="col-xs-4 col-md-4">
              <%= location.label :state %>
              <%= location.text_field :state, class: "form-control" %>
            </div>
            <div class="col-xs-4 col-md-4">
              <%= location.label :country %>
              <%= location.text_field :country, class: "form-control" %>
            </div>
          </div>
        <% end %>
         <%= form.submit "Post Listing", class:"btn btn-block btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
</div>