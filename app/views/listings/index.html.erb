<div class="row">
	<div class="col-xs-12 col-md-12">
		<h1 class="text-center">Browse Through Recent Listing</h1>
	</div>
</div>
<div class="row">
	<div class="col-xs-3 col-md-3">
		<h3 class="text-center">Title</h3>
	</div>
	<div class="col-xs-3 col-md-3">
		<h3 class="text-center">Description</h3>
	</div>
	<div class="col-xs-3 col-md-3">
		<h3 class="text-center">Price</h3>
	</div>
	<div class="col-xs-3 col-md-3">
		<h3 class="text-center">Location</h3>
	</div>
</div>
<div class="row">
	<% @listings.each do |listing| %>
		<div class="col-xs-3 col-md-3">
			<p class="text-center">
				<%= link_to "#{listing.title}", user_listing_path(listing.user_id, listing.id) %>
			</p>
		</div>
		<div class="col-xs-3 col-md-3">
			<p class="text-center">
				<%= truncate(listing.description, length: 50) %>
			</p>
		</div>
		<div class="col-xs-3 col-md-3">
			<p class="text-center">
				<%= listing.price %>
			</p>
		</div>
		<div class="col-xs-3 col-md-3">
			<p class="text-center" >
				<%= Location.find_by(listing_id: listing.id).country %>
			</p>
		</div>
	<% end %>
</div>