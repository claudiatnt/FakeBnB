<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-md-12">
			<h1 class="text-center">Sign In </h1>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2 col-md-8 col-md-8-offset-2 text-center">
			<%= form_for :session, url: session_path do |form| %>
				<div class="form-group text-field">
					<%= form.label :email %>
					<%= form.text_field :email, type: "email", class: "form-control" %>
				</div>
				<div class="form-group password-field">
					<%= form.label :password %>
					<%= form.password_field :password, type: "password", class: "form-control" %>
				</div>
				<%= form.submit "Log In", class: "btn btn-primary btn-block" %>
				<%= link_to "Forgot Password", new_password_path, class: "btn btn-primary btn-block" %>
				<% end %>
		</div>
	</div>
</div>
<div class="container-fluid">
	<div class="spacing"></div>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2 col-md-8 col-md-offset-2">
			<%= link_to "Home", root_path , class: "btn btn-block btn-primary" %>
		</div>
	</div>
</div>
